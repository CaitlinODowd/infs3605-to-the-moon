<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infs3605.tothemoon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity">
        <activity
            android:name="com.infs3605.tothemoon.ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.MainActivity.NoActionBar"></activity>
        <activity
            android:name="com.infs3605.tothemoon.PassTestActivity"
            android:label="@string/title_activity_pass_test"
            android:theme="@style/Theme.MainActivity.NoActionBar"></activity>
        <activity android:name="com.infs3605.tothemoon.QuizActivity">
        </activity>
        <activity android:name="com.infs3605.tothemoon.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.infs3605.tothemoon.LoginActivity" />
        <activity android:name="com.infs3605.tothemoon.RegisterActivity" />
        <activity android:name="com.infs3605.tothemoon.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>